{
  "manifest_version": 3,
  "name": "Gemini Code Fixer",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["lib/highlight.min.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["themes/*.css", "worker.js", "lib/highlight.min.js"],
      "matches": ["*://gemini.google.com/*"]
    }
  ]
}
